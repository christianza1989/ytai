# Suno API Configuration
SUNO_API_KEY=your_suno_api_key_here

# Google Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash  # Available: gemini-1.5-flash, gemini-1.5-pro, gemini-1.0-pro

# YouTube API Configuration
YOUTUBE_CHANNEL_ID=your_youtube_channel_id_here
YOUTUBE_CLIENT_SECRETS_PATH=configs/client_secrets.json

# Callback URL for async operations (optional)
CALLBACK_URL=https://your-domain.com/callback

# Application Settings
LOG_LEVEL=INFO
OUTPUT_DIR=output/
TEMP_DIR=temp/

# Database Configuration
DATABASE_URL=sqlite:///database.db

# Optional: Image Generation API (for album covers)
STABLE_DIFFUSION_API_KEY=your_stable_diffusion_key_here
STABLE_DIFFUSION_URL=https://api.stability.ai
